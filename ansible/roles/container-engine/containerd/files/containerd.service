[Unit]
Description=containerd container runtime
Documentation=https://containerd.io
After=network.target

[Service]
User=root
Group=root
Environment=PATH=/usr/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/usr/bin/containerd -c /etc/containerd/config.toml -l warn
Restart=always
RestartSec=10
KillMode=process
Delegate=yes
OOMScoreAdjust=-999
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
TasksMax=infinity

[Install]
WantedBy=multi-user.target
